name: Deploy with Custom HTML

on:
  push:
    branches: [ main ]
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v4
    
    - name: Setup Python
      uses: actions/setup-python@v5
      with:
        python-version: '3.11'
    
    - name: Install dependencies
      run: |
        sudo apt-get update && sudo apt-get install -y ffmpeg
        pip install pygame-ce==2.5.4 pygbag==0.9.2 black
        pip install numpy pygame_gui python-i18n
    
    - name: Create build directory and copy HTML
      run: |
        mkdir -p build
        cp index.html build/
        echo "=== Copied existing index.html ==="
        cat build/index.html
    
    - name: Build Python to WASM
      run: |
        echo "=== Building with pygbag ==="
        python -m pygbag --build main.py
        echo "=== Build complete ==="
    
    - name: Copy WASM files to build directory
      run: |
        echo "=== Looking for WASM and JS files ==="
        find . -name "*.wasm" -o -name "*.js" | grep -v node_modules
        
        # Copy any generated files to our build directory
        if [ -f "main.wasm" ]; then
          cp main.wasm build/
        fi
        if [ -f "main.js" ]; then
          cp main.js build/
        fi
        
        # Check if pygbag created a dist or other directory
        if [ -d "dist" ]; then
          echo "=== Copying from dist ==="
          cp -r dist/* build/ 2>/dev/null || true
        fi
        
        echo "=== Final build directory contents ==="
        ls -la build/
    
    - name: Setup Pages
      uses: actions/configure-pages@v4
    
    - name: Upload artifact
      uses: actions/upload-pages-artifact@v3
      with:
        path: ./build
    
    - name: Deploy to GitHub Pages
      uses: actions/deploy-pages@v4
